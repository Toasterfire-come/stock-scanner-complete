# Backend environment example
# Copy to backend/.env and configure values

# Runtime
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=please-change-in-prod
JWT_SECRET_KEY=please-change-in-prod

# External API
EXTERNAL_API_URL=https://api.retailtradescanner.com
EXTERNAL_API_PASSWORD=
EXTERNAL_API_TIMEOUT_SECONDS=2

# Database (MongoDB)
MONGO_URL=mongodb://localhost:27017
DB_NAME=stock_scanner
MONGO_SELECT_TIMEOUT_MS=1000
MONGO_CONNECT_TIMEOUT_MS=1000
MONGO_SOCKET_TIMEOUT_MS=1000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Environment Configuration for TradeScan Pro Backend

# Database Configuration
MONGO_URL=mongodb://localhost:27017
