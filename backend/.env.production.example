# Core Django
DJANGO_ALLOWED_HOSTS=api.retailtradescanner.com,retailtradescanner.com,www.retailtradescanner.com
SECRET_KEY=replace-me
DEBUG=false

# CORS/CSRF
FRONTEND_URL=https://retailtradescanner.com
CSRF_TRUSTED_ORIGINS=https://retailtradescanner.com,https://www.retailtradescanner.com,https://api.retailtradescanner.com
EXTRA_CORS_ORIGINS=
EXTRA_CSRF_ORIGINS=

# Database (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=stockscanner
DB_USER=replace
DB_PASSWORD=replace
DB_HOST=127.0.0.1
DB_PORT=3306

# Email (SES)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_HOST_USER=replace
EMAIL_HOST_PASSWORD=replace
EMAIL_USE_TLS=true
EMAIL_FROM=no-reply@retailtradescanner.com
AWS_REGION=us-east-1

# PayPal
PAYPAL_ENV=live
PAYPAL_CLIENT_ID=replace
PAYPAL_SECRET=replace
PAYPAL_WEBHOOK_ID=replace
PAYPAL_WEBHOOK_URL=https://api.retailtradescanner.com/paypal/webhook/

# Renewals cron
CRON_SECRET=replace
API_BASE_URL=https://api.retailtradescanner.com
RENEWAL_LIMIT=500

# Sentry
SENTRY_DSN=
RELEASE=
ENVIRONMENT=production

# Feature toggles
BACKEND_DOCS_ENABLED=false
API_KEYS_ENABLED=false
API_KEYS_BYPASS_RATE_LIMIT=true
API_KEYS_BYPASS_CORS=true
API_KEY_PEPPER=replace

# Security
SECURE_HSTS_SECONDS=31536000
LOG_LEVEL=INFO
JSON_LOGS=true

# Referral/Anti-abuse
REFERRAL_INVITES_PER_HOUR=20
DISPOSABLE_EMAIL_DOMAINS=mailinator.com,guerrillamail.com,10minutemail.com,tempmail.com,trashmail.com
