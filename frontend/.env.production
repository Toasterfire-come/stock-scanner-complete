# Frontend Production Environment Variables
# These values will be embedded into the build at compile time

# Backend API URL (CHANGE THIS TO YOUR PRODUCTION BACKEND URL)
REACT_APP_BACKEND_URL=https://api.tradescanpro.com

# Public URL for the frontend (CHANGE THIS TO YOUR PRODUCTION FRONTEND URL)
REACT_APP_PUBLIC_URL=https://tradescanpro.com

# Referral query parameter keys
REACT_APP_REFERRAL_QUERY_KEYS=ref,referral,ref_code,coupon,code,campaign,utm_campaign

# Sentry DSN for error tracking (optional - add your Sentry DSN if you have one)
REACT_APP_SENTRY_DSN=

# App version
REACT_APP_VERSION=2.0.0-mvp

# PayPal Configuration
REACT_APP_LAZY_PAYPAL=on
# ADD YOUR PRODUCTION PAYPAL CLIENT ID HERE:
REACT_APP_PAYPAL_CLIENT_ID=AcqbU_Y_mQK6pdy8hzpPif0UPWrG8_3vi3wxc-cIM2n2PAhdq4kJaq7BO4jUtAvfrYCgvYOzFbsGCHVY
REACT_APP_PAYPAL_ADVANCED=off

# Production - Disable debugging features
REACT_APP_ENABLE_CONSOLE_LOGS=off
REACT_APP_ENABLE_DEVTOOLS=off

# Session configuration
REACT_APP_SESSION_TIMEOUT_MINUTES=30
REACT_APP_TOKEN_REFRESH_THRESHOLD_MINUTES=5

# API rate limiting
REACT_APP_MAX_API_CALLS_PER_MINUTE=60
REACT_APP_MAX_CONCURRENT_REQUESTS=5

# API password for backend-to-backend auth
REACT_APP_API_PASSWORD=production-secret-change-me

# Promo codes (optional - comma-separated list)
REACT_APP_PROMO_CODES=
