# Enable MultiViews OFF to prevent Apache from trying to serve extensionless files
Options -MultiViews +FollowSymLinks

# Force MIME types for static files - CRITICAL for preventing text/html responses
<IfModule mod_mime.c>
  # Core web types
  AddType text/css .css
  AddType application/javascript .js
  AddType application/json .json
  AddType text/html .html .htm

  # Image types
  AddType image/svg+xml .svg .svgz
  AddType image/webp .webp
  AddType image/avif .avif
  AddType image/png .png
  AddType image/jpeg .jpg .jpeg
  AddType image/gif .gif
  AddType image/x-icon .ico

  # Font types
  AddType font/woff .woff
  AddType font/woff2 .woff2
  AddType font/ttf .ttf
  AddType font/otf .otf
  AddType application/vnd.ms-fontobject .eot

  # Other
  AddType text/plain .txt
  AddType application/manifest+json .webmanifest
  AddType text/cache-manifest .appcache

  # Map files for source maps
  AddType application/json .map

  # Ensure proper charset
  AddDefaultCharset UTF-8
  <FilesMatch "\.(html|css|js|json|xml|txt)$">
    AddCharset UTF-8 .html .css .js .json .xml .txt
  </FilesMatch>
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Canonical host: force non-www
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [L,R=301]

  # Enforce HTTPS only when both indicators show non-https (avoid proxy loops)
  RewriteCond %{HTTPS} !=on
  RewriteCond %{HTTP:X-Forwarded-Proto} !https
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # CRITICAL: Serve static files directly without rewriting
  # This must come BEFORE the SPA fallback
  # Match any file in /static/ directory
  RewriteCond %{REQUEST_URI} ^/static/
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Also handle root-level static assets (images, manifest, etc)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Do not rewrite existing directories
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback to index.html ONLY for non-existing files
  # This catches all other requests (HTML5 pushState URLs)
  RewriteRule ^ /index.html [L]
</IfModule>

DirectoryIndex index.html

# Custom 404
ErrorDocument 404 /404.html

# Security headers
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# Browser caching for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/avif "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresDefault "access plus 1 day"
</IfModule>
