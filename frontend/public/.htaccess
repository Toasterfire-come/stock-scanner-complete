# SPA routing for Create React App within /react (HTTPS enforced globally)

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Allow existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Default route to index.html within /react
  RewriteRule ^$ /react/index.html [L]

  # SPA fallback to index.html
  RewriteRule . /index.html [L]
</IfModule>

<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

DirectoryIndex index.html
ErrorDocument 404 /react/index.html