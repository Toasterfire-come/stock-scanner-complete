# Frontend Environment Variables
# Development Configuration

# Backend API base URL
REACT_APP_BACKEND_URL=https://scanner-repo-fix.preview.emergentagent.com

# Public site URL
REACT_APP_PUBLIC_URL=http://localhost:3000

# Referral query keys
REACT_APP_REFERRAL_QUERY_KEYS=ref,referral,ref_code,coupon,code,campaign,utm_campaign

# Sentry (disabled for development)
REACT_APP_SENTRY_DSN=

# Version
REACT_APP_VERSION=2.0.0-mvp

# PayPal (sandbox mode)
REACT_APP_LAZY_PAYPAL=on
REACT_APP_PAYPAL_CLIENT_ID=
REACT_APP_PAYPAL_ADVANCED=off

# Security/diagnostics (enabled for development)
REACT_APP_ENABLE_CONSOLE_LOGS=on
REACT_APP_ENABLE_DEVTOOLS=on

# Session and rate limiting
REACT_APP_SESSION_TIMEOUT_MINUTES=30
REACT_APP_TOKEN_REFRESH_THRESHOLD_MINUTES=5
REACT_APP_MAX_API_CALLS_PER_MINUTE=60
REACT_APP_MAX_CONCURRENT_REQUESTS=5

# API Password placeholder
REACT_APP_API_PASSWORD=dev-mode

# Promo codes (empty for development)
REACT_APP_PROMO_CODES=
