# Frontend environment variables (Create React App)
# Copy this file to .env or .env.local and fill in values as needed

# Backend API base URL (required)
REACT_APP_BACKEND_URL=https://api.tradescanpro.com

# Public site URL used for return/cancel URLs and share links
REACT_APP_PUBLIC_URL=https://tradescanpro.com

# Referral query keys (comma-separated); used to auto-detect referral codes
REACT_APP_REFERRAL_QUERY_KEYS=ref,referral,ref_code,coupon,code,campaign,utm_campaign

# Sentry (optional)
REACT_APP_SENTRY_DSN=
REACT_APP_VERSION=1.0.0

# PayPal (required if enabling payments)
REACT_APP_LAZY_PAYPAL=on
REACT_APP_PAYPAL_CLIENT_ID=
REACT_APP_PAYPAL_ADVANCED=off
# Optional explicit subscription plan IDs (fallbacks exist when meta endpoint is available)
REACT_APP_PAYPAL_PLAN_BRONZE_MONTHLY=
REACT_APP_PAYPAL_PLAN_BRONZE_ANNUAL=
REACT_APP_PAYPAL_PLAN_SILVER_MONTHLY=
REACT_APP_PAYPAL_PLAN_SILVER_ANNUAL=
REACT_APP_PAYPAL_PLAN_GOLD_MONTHLY=
REACT_APP_PAYPAL_PLAN_GOLD_ANNUAL=

# Security/diagnostics toggles (production should keep these off)
REACT_APP_ENABLE_CONSOLE_LOGS=off
REACT_APP_ENABLE_DEVTOOLS=off

# Session and rate limiting (client-side guards; server is source of truth)
REACT_APP_SESSION_TIMEOUT_MINUTES=30
REACT_APP_TOKEN_REFRESH_THRESHOLD_MINUTES=5
REACT_APP_MAX_API_CALLS_PER_MINUTE=60
REACT_APP_MAX_CONCURRENT_REQUESTS=5

# Deployment/build checks expect this to be set; use any non-empty placeholder
REACT_APP_API_PASSWORD=set-me

# Whitelist mode - Only allow specific emails to register (comma-separated)
# Example: REACT_APP_WHITELISTED_EMAILS=user1@example.com,user2@example.com,admin@company.com
REACT_APP_WHITELISTED_EMAILS=

# Promo codes (frontend-validated). JSON array or delimited. Examples:
# JSON: [{"code":"TRIAL","type":"fixed","amount":1,"applies":"monthly","plans":["bronze","silver","gold"]},{"code":"REF_*","type":"percent","amount":50,"applies":"monthly","plans":"any"}]
# Delimited: TRIAL:fixed:1:monthly:any:2026-01-01; REF_*:percent:50:monthly:any
REACT_APP_PROMO_CODES=
