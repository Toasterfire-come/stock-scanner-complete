# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply.retailtradescanner@gmail.com
EMAIL_HOST_PASSWORD=mzqmvhsjqeqrjmjv
DEFAULT_FROM_EMAIL=Retail Trade Scanner Alert <noreply.retailtradescanner@gmail.com>

# =============================================================================
# STOCK DATA API CONFIGURATION
# =============================================================================
# Yahoo Finance settings (no API key required)
YFINANCE_TIMEOUT=30
YFINANCE_RETRY_COUNT=3
STOCK_UPDATE_LIMIT=3500

# =============================================================================
# NEWS SCRAPING CONFIGURATION
# =============================================================================
NEWS_SCRAPER_ENABLED=True
NEWS_SCRAPER_TIMEOUT=30
NEWS_SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; StockScanner/1.0)

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
NASDAQ_UPDATE_INTERVAL=5
SCHEDULER_ENABLED=True
SCHEDULER_TIMEZONE=America/New_York
SCHEDULER_AUTO_START=True

# =============================================================================
# ENVIRONMENT DETECTION AND AUTO-CONFIGURATION
# =============================================================================
# Auto-detect XAMPP and configure accordingly
AUTO_DETECT_XAMPP=True
AUTO_CONFIGURE_DATABASE=True

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================
# Enable these in production only:
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# =============================================================================
# STATIC FILES
# =============================================================================
STATIC_URL=/static/
# For production, uncomment and set appropriate path:
# STATIC_ROOT=/var/www/stockscanner/static/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_CONSOLE=True
# For production, uncomment and set log file path:
# LOG_FILE=/var/log/stockscanner/django.log

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Cache settings (Redis) - for production:
# CACHE_URL=redis://localhost:6379/1
# CELERY_ENABLED=False

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# WORDPRESS INTEGRATION
# =============================================================================
WORDPRESS_API_KEY=your-wordpress-api-key
WORDPRESS_SITE_URL=https://retailtradescanner.com
WORDPRESS_INTEGRATION_ENABLED=True

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=True
MONITORING_ENABLED=True
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# =============================================================================
# DEVELOPMENT/DEBUGGING OPTIONS
# =============================================================================
# Enable these for debugging:
DATABASE_DEBUG=False
DJANGO_DEBUG_TOOLBAR=False
VERBOSE_LOGGING=False

# =============================================================================
# MYSQL/XAMPP SPECIFIC SETTINGS
# =============================================================================
# These help with MySQL connectivity issues:
MYSQL_CONNECT_TIMEOUT=60
MYSQL_READ_TIMEOUT=300
MYSQL_WRITE_TIMEOUT=300
MYSQL_CHARSET=utf8mb4

# =============================================================================
# QUICK SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update values as needed for your environment
# 3. For XAMPP users: The default settings above should work
# 4. For custom MySQL: Update DB_USER and DB_PASSWORD
# 5. Run: python3 manage.py migrate
# 6. Run: python3 manage.py runserver
