{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "800px",
            "wideSize": "1440px"
        },
        "color": {
            "palette": [
                {
                    "slug": "primary-50",
                    "color": "#eff6ff",
                    "name": "Primary 50"
                },
                {
                    "slug": "primary-500",
                    "color": "#3b82f6",
                    "name": "Primary"
                },
                {
                    "slug": "primary-600",
                    "color": "#2563eb",
                    "name": "Primary Dark"
                },
                {
                    "slug": "primary-900",
                    "color": "#1e3a8a",
                    "name": "Primary Darker"
                },
                {
                    "slug": "secondary-500",
                    "color": "#d946ef",
                    "name": "Secondary"
                },
                {
                    "slug": "success",
                    "color": "#16a34a",
                    "name": "Success"
                },
                {
                    "slug": "danger",
                    "color": "#dc2626",
                    "name": "Danger"
                },
                {
                    "slug": "warning",
                    "color": "#f59e0b",
                    "name": "Warning"
                },
                {
                    "slug": "info",
                    "color": "#0ea5e9",
                    "name": "Info"
                },
                {
                    "slug": "gray-50",
                    "color": "#f9fafb",
                    "name": "Gray 50"
                },
                {
                    "slug": "gray-100",
                    "color": "#f3f4f6",
                    "name": "Gray 100"
                },
                {
                    "slug": "gray-200",
                    "color": "#e5e7eb",
                    "name": "Gray 200"
                },
                {
                    "slug": "gray-300",
                    "color": "#d1d5db",
                    "name": "Gray 300"
                },
                {
                    "slug": "gray-400",
                    "color": "#9ca3af",
                    "name": "Gray 400"
                },
                {
                    "slug": "gray-500",
                    "color": "#6b7280",
                    "name": "Gray 500"
                },
                {
                    "slug": "gray-600",
                    "color": "#4b5563",
                    "name": "Gray 600"
                },
                {
                    "slug": "gray-700",
                    "color": "#374151",
                    "name": "Gray 700"
                },
                {
                    "slug": "gray-800",
                    "color": "#1f2937",
                    "name": "Gray 800"
                },
                {
                    "slug": "gray-900",
                    "color": "#111827",
                    "name": "Gray 900"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary-500) 0%, var(--wp--preset--color--primary-600) 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "secondary-gradient",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--secondary-500) 0%, var(--wp--preset--color--primary-600) 100%)",
                    "name": "Secondary Gradient"
                },
                {
                    "slug": "glass-gradient",
                    "gradient": "linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%)",
                    "name": "Glass Gradient"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"InterDisplay\", \"SF Pro Display\", system-ui, sans-serif",
                    "slug": "display",
                    "name": "Display Font"
                },
                {
                    "fontFamily": "\"InterText\", \"SF Pro Text\", system-ui, sans-serif",
                    "slug": "body",
                    "name": "Body Font"
                },
                {
                    "fontFamily": "\"JetBrains Mono\", \"Fira Code\", monospace",
                    "slug": "mono",
                    "name": "Monospace Font"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "clamp(0.75rem, 0.69rem + 0.31vw, 0.8rem)",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "clamp(0.875rem, 0.81rem + 0.33vw, 0.9rem)",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "clamp(1rem, 0.95rem + 0.35vw, 1.05rem)",
                    "name": "Base"
                },
                {
                    "slug": "lg",
                    "size": "clamp(1.125rem, 1.05rem + 0.4vw, 1.2rem)",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "clamp(1.25rem, 1.15rem + 0.5vw, 1.4rem)",
                    "name": "Extra Large"
                },
                {
                    "slug": "2xl",
                    "size": "clamp(1.5rem, 1.35rem + 0.7vw, 1.75rem)",
                    "name": "2X Large"
                },
                {
                    "slug": "3xl",
                    "size": "clamp(2rem, 1.8rem + 1vw, 2.5rem)",
                    "name": "3X Large"
                },
                {
                    "slug": "4xl",
                    "size": "clamp(2.5rem, 2.2rem + 1.5vw, 3.5rem)",
                    "name": "4X Large"
                }
            ]
        },
        "spacing": {
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.25rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "md",
                    "size": "0.75rem",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "size": "1rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "2xl",
                    "size": "2rem",
                    "name": "2X Large"
                },
                {
                    "slug": "3xl",
                    "size": "3rem",
                    "name": "3X Large"
                },
                {
                    "slug": "4xl",
                    "size": "4rem",
                    "name": "4X Large"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--gray-50)",
            "text": "var(--wp--preset--color--gray-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary-600)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-700)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--4xl)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--3xl)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--2xl)",
                    "fontWeight": "700",
                    "lineHeight": "1.3"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--xl)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--lg)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--display)",
                    "fontSize": "var(--wp--preset--font-size--base)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "dashboard",
            "title": "Dashboard",
            "postTypes": ["page"]
        },
        {
            "name": "scanner",
            "title": "Scanner",
            "postTypes": ["page"]
        },
        {
            "name": "portfolio",
            "title": "Portfolio",
            "postTypes": ["page"]
        }
    ]
}