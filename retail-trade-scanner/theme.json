          "fontSize": "var(--wp--preset--font-size--gigantic)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
